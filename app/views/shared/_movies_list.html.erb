<!-- app/views/lists/_movies_list.html.erb -->
<div id="movies_list">
  <% if movies.any? %>
    <p><%= movies.count %> Items found</p>
    <ul>
      <div class="movie">
        <% movies.each do |movie| %>
          <li><b><%= movie.title %></b> (<%= movie.year %>) - <%= movie.imdb_rating %> <br>
            <%= movie.genre %></li>
        <% end %>
      </div>
    </ul>
  <% else %>
    <p>No movies found.</p>
  <% end %>
</div>
