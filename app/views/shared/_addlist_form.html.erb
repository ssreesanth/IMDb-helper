<div class="dropdown">
  <div class="mt-4 addlist-form">
    <%= form_with url: imdb_import_path, method: :post, local: false, html: { multipart: true }, remote: true, class: 'form' do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "List Name", class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= form.label :file, "Select File", class: 'form-label' %>
        <%= form.file_field :file, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit "Save List", class: 'btn add-watchlist' %>
      </div>
    <% end %>
  </div>
</div>
