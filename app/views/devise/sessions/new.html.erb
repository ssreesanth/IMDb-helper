<h2 class="mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-inputs">
    <div class="mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" },
                  label_html: { class: "form-label" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" },
                  label_html: { class: "form-label" } %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.input :remember_me,
                    as: :boolean,
                    label_html: { class: "form-check-label" },
                    input_html: { class: "form-check-input" } %>
      </div>
    <% end %>
  </div>

  <div class="form-actions mt-4 mb-3">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
