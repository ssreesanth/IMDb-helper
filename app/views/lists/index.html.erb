<div class="container mt-4">
  <h2 class="mb-4">IMDB Watchlist Helper</h2>

  <div class="mb-4">
    <%= render "shared/form" %>
  </div>

  <div class="mb-4">
    <%= form_with url: imdb_filter_path, method: :post, local: true, html: { class: 'form-inline' } do |form| %>
      <div class="form-group mb-2">
        <%= form.label :min_imdb_rating, "IMDB Rating Range", class: 'mr-2' %>
        <%= form.number_field :min_imdb_rating, step: 0.1, min: 0, max: 10, value: params[:min_imdb_rating], class: 'form-control' %>
        <%= form.label :max_imdb_rating, "-", class: 'mx-2' %>
        <%= form.number_field :max_imdb_rating, step: 0.1, min: 0, max: 10, value: params[:max_imdb_rating], class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= form.label :genre, "Genre", class: 'mr-2' %>
        <%= form.text_field :genre, value: params[:genre], class: 'form-control' %>
      </div>

      <div class="form-group mb-2">
        <%= form.submit "Filter", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div id="movies_list" class="mt-4"></div>
  
</div>
