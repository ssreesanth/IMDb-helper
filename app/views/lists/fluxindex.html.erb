<h2 class="h1-title mb-4">Flux Fm Top 30 Songs of the Month</h2>

<%= form_with url: fluxfm_path, method: :get, local: false, remote: true do |form| %>
  <div class="flux-search">
    <%= form.date_field :date, class: "flux-date", min: "2022-01-01", max: Date.today, value: (params[:date] || Date.today) %>
    <%= form.submit "Search", class: "flux-save btn btn-secondary btn-sm" %>
  </div>
<% end %>

<div class="mt-3 ">
  <%= render "shared/songs" %>
</div>
